{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "start": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "preview": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "synth": {
      "outputs": ["cdk.out/**"]
    },
    "deploy": {
      "dependsOn": ["synth"],
      "cache": false
    }
  }
}
