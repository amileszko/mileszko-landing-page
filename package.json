{
  "name": "@mileszko-landing-page/monorepo",
  "packageManager": "yarn@4.9.2",
  "type": "module",
  "workspaces": [
    "cdk",
    "website",
    "api"
  ],
  "scripts": {
    "website:start": "turbo run start --filter=@mileszko-landing-page/website",
    "website:build": "turbo run build --filter=@mileszko-landing-page/website",
    "website:preview": "turbo run preview --filter=@mileszko-landing-page/website",
    "api:build": "turbo run build --filter=@mileszko-landing-page/api",
    "cdk:synth": "turbo run synth --filter=@mileszko-landing-page/cdk",
    "cdk:deploy": "turbo run deploy --filter=@mileszko-landing-page/cdk",
    "check-types": "tsc --noEmit -p cdk/tsconfig.json && tsc --noEmit -p website/tsconfig.json && tsc --noEmit -p api/tsconfig.json",
    "lint": "eslint"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "^1.52.3",
    "@eslint/js": "^9.31.0",
    "@stylistic/eslint-plugin": "^5.2.1",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-better-tailwindcss": "^3.7.1",
    "eslint-plugin-i18next": "^6.1.3",
    "eslint-plugin-import-newlines": "^1.4.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-newline-destructuring": "^1.2.2",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.3.0",
    "tailwindcss": "^4.1.11",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
